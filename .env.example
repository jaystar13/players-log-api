# .env.example
# 이 파일을 복사하여 .env 파일을 만들고 실제 값을 입력하세요

# Database
DB_URL=jdbc:mysql://localhost:3306/authdb
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OAuth2 - Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_secret_here

# OAuth2 - Facebook
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_secret_here

# OAuth2 - Apple
APPLE_CLIENT_ID=com.yourcompany.yourapp
APPLE_CLIENT_SECRET=your_apple_secret_here

# JWT
JWT_SECRET=generate_a_secure_random_string_here

# App Config
SPRING_PROFILES_ACTIVE=local
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=Lax
